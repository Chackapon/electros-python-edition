def OS():
  if language[0] == "EN":
    print('Type any command. Type .help to show help')
  elif language[0] == "UA":
    print('Напишіть яку завгодно команду. Щоб побачити повний список команд, напишіть .help')
  elif language[0] == "PL":
    print("Napisz jakąkolwiek komendę. By wyświetlić listę dostępnych komend, napisz .help")
  else:
    print("Jkrg sdu dkrucnd. Hkvu .help cj hfnw jtpl")
  cmd = input()
  if cmd[0] == '.':
    if cmd == '.help':
      print('==============================' * 2)
      if language[0] == "EN":
        print('.info - displays info about the OS\n.help - displays help\n.bot - launches ChatBot')
        print('.import - imports ElectrOScript app\n.language - changes the language of the OS\n.shutdown - Shuts down the ElectrOS\n.code - launches ElectrOScript console\n.open - opens ElectrOScript app')
      elif language[0] == "UA":
        print('.info - показує інформацію о системі\n.help - показує список команд\n.bot - вмикає ЧатБота')
        print('.import - імпортує програму написану в ElectrOScript\n.language - Змінює мову\n.shutdown - Вимикає систему')
      elif language[0] == "PL":
        print('.info - wyświetla informację o ElectrOSie\n.help - wyświetla listę dostępnych komend\n.bot - włącza CzatBota')
        print('.import - imports ElectrOScript app\n.language - zmienia język systemu\n.shutdown - wyłącza ElectrOS')
      else:
        print('.info - dj389vlrm nfso abtou elz NK\n.help - ei30vkf_ joi[\n.bot - dewjiode ChatBot')
        print('.import - wem3ix9 ElectrOScript 3ld\n.language - dj49cnd 2k0 lsk39c[de kr zle KF\n.shutdown - Jisnf lwop zle ElectrOS')
      if devMode[0] == 1:
        print('.login - Login to an account\n.reg - Registers an account')
        print('.debug - launches debug screen\n.open - opens app')
      print('==============================' * 2)
      OS()
    elif cmd == '.debug':
      #print(var1)
      OS()
    elif cmd == '.info':
      print('==============================' * 2)
      if language[0] == "EN":
        print('ElectrOS ALPHA\nVersion: 0.3.0.1\nEdition: Py (Python/Pi (?)/Raspberry Pi (?))')
        print('Bot Version: 0.1.2\nElectrOScript Version: 0.2.2')
      elif language[0] == "UA":
        print('ElectrOS ALPHA\nВерсія: 0.3.0.1\nВідміна: Py (Python/Pi (?)/Raspberry Pi (?)')
        print('Версія ЧатБота: 0.1.2\nВерсія ElectrOScript: 0.2.2')
      print('==============================' * 2) 
      OS()
    elif cmd == '.bot':
      print('Enter something, like "Hello"')
      Bot()
    elif cmd == '.language' or cmd == ".lan":
      if language[0] == "EN":
        print('Enter the short code of your language. Currenty Supported languages are:')
      elif language[0] == "UA":
        print('Впишіть корткий код вашої мови. В цьому моменті система підтримує:')
      elif language[0] == "PL":
        print("Wpisz krótki kod twojego języka. W tym momencie są dostępne:")
      print('EN - English\nUA - Україньска\nPL - Polski')
      language[0] = input()
      OS()
    elif cmd == '.dev':
     print('Enter developer\'s password')
     devPassword = input()
     if devPassword == "thecakeisalie":
       #print('\n' * 100)
       print('Developer mode was activated. New commands and functions have been added')
       devMode[0] = 1
       OS()
    elif cmd == ".code":
      #try:
      ElectrOScript("")
      #finally:
      OS()
    elif cmd == ".import" or cmd == ".i":
      print("Enter name of the app (it'll be used to open the app, like Calculator is 'calc'.")
      z = input()
      scriptNames.append(z)
      print("Start entering the code.")
      lines = []
      while True:
        line = input()
        if line != "{end}":
            lines.append(line)
        else:
            lines.append("{end}")
            break
      text = '\n'.join(lines)
      scripts.append(text)
      OS()
    elif cmd == ".open":
      print("Enter the name of the app (like 'calc')")
      print(scriptNames)
      hx = input()
      y = 0
      while scriptNames[y] != hx and y < len(scriptNames):
        y = y + 1
      ElectrOScript(scripts[y])
      OS()
    elif cmd == ".shutdown":
      print("Shutting down...")
    else:
      print('ERROR (002) = Unknown command')
      OS()
  else:
      print('ERROR (001) = Commands must start with "."')
      OS()
OS()
